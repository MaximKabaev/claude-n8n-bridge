# Server Configuration
PORT=3000
PUBLIC_URL=https://mcp.my-domain.com

# Keycloak Configuration
KEYCLOAK_REALM=mcp
KEYCLOAK_SERVER_URL=https://auth.my-domain.com:8080
KEYCLOAK_CLIENT_ID=mcp-middleware
KEYCLOAK_CLIENT_SECRET=  # Optional - leave empty for public clients

# n8n Configuration
N8N_MCP_URL=https://n8n.my-domain.com/webhook/mcp/YOUR_WEBHOOK_ID
N8N_BEARER_TOKEN=  # Optional - add if your n8n MCP trigger requires authentication

# Security
API_KEY=your-secret-api-key-here
DISABLE_AUTH=false  # WARNING: Set to true only for testing - disables all authentication